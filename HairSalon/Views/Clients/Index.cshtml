@{
  Layout = "_Layout";
}
<div class="container">


<h2 class="text-center mt-4 mb-5">All Clients</h2>
    @if (@Model.Count == 0)
    {
    <h3>No Clients are listed!</h3>
    }
  <div class="row mt-5 mb-5">
    @foreach (var client in Model)
    {
    <div class="col col-md-3 mb-5">
    <h2 class="special"><a href='/clients/@client.GetId()'>@client.GetName()</a></h2>
    <a href="/clients/@client.GetId()/delete"><button class="btn btn-sm btn-danger">Delete Client</button></a>
    </div>  
    }
  </div>
  <a href='/clients/new'><button class="btn btn-lg btn-primary mb-3">Add a Client</button></a><br>
  <a href="/"><button class="btn btn-lg btn-dark">Back to Main</button></a>
  </div>