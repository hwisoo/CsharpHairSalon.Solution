@{
  Layout = "_Layout";
}
<div class="container">


<h2 class="text-center mt-4 mb-5">All Specialties</h2>
    @if (@Model.Count == 0)
    {
    <h3>No Specialties are listed!</h3>
    }
  <div class="row mt-5 mb-5">
    @foreach (var specialty in Model)
    {
    <div class="col col-md-3 mb-5">
    <h2 class="special"><a href='/specialties/@specialty.GetId()'>@specialty.GetName()</a></h2>
    <a href="/specialties/@specialty.GetId()/delete"><button class="btn btn-sm btn-danger">Delete Specialty</button></a>
    </div>  
    }
  </div>
   <a href='/specialties/delete'><button class="btn btn-lg btn-danger mb-3">Delete All Specialties</button></a><br>
  <a href='/specialties/new'><button class="btn btn-lg btn-primary mb-3">Add a Specialty</button></a><br>
  <a href="/"><button class="btn btn-lg btn-dark">Back to Main</button></a>
  </div>