@{
  Layout = "_Layout";
}

<h2 class="text-center mt-4">Edit Stylist</h2>
<div class="container ml-5">
  <div class="row">

    <form class="form-group" action="/stylists/new" method="post">
    <div class="col font-weight-bold">
      <label for="stylistName">Edit Name: </label>
      <input class="form-control" type="text" name="stylistName" required placeholder="@Model.GetName()"><br>
    </div>

    <div class="col">
    <button type="submit" class="btn btn-lg btn-primary">Edit</button>
    </div>
    </form>
  </div>

  <a href='/stylists'><button class="btn btn-dark btn-lg mb-2">Back to Stylists</button></a><br>
<a href='/'><button class="btn btn-dark btn-lg mb-2">Back to Main </button></a>
</div>