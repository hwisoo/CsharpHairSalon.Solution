@{
  Layout = "_Layout";
}

<h2 class="text-center mt-4">Add Specialty</h2>
<div class="container ml-5">
  <div class="row">

    <form class="form-group" action="/specialties/new" method="post">
    <div class="col font-weight-bold">
      <label for="specialtyName">Specialty: </label>
      <input class="form-control" type="text" name="specialtyName" required><br>
