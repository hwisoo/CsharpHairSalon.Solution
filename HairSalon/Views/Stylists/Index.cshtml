@{
  Layout = "_Layout";
}
<div class="container">


<h2 class="text-center">All Stylists</h2>
    @if (@Model.Count == 0)
    {
    <h3>No Stylists are listed!</h3>
    }
  <div class="row mb-5">
    @foreach (var stylist in Model)
    {
    <div class="col col-md-3 mb-5">
    <h2><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h2>
    <img src="http://lorempixel.com/80/80/people">
    <a href="/stylists/@stylist.GetId()/delete"><button class="btn btn-sm btn-danger">Delete Stylist</button></a>
    </div>  
    }
  </div>
  <a href="/"><button class="btn btn-lg btn-dark">Back to Home</button></a>
  </div>