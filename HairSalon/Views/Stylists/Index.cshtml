@{
  Layout = "_Layout";
}
<div class="container">


<h2 class="text-center mt-4 mb-5">All Stylists</h2>
    @if (@Model.Count == 0)
    {
    <h3>No Stylists are listed!</h3>
    }
  <div class="row mt-5 mb-5">
    @foreach (var stylist in Model)
    {
    <div class="col col-md-3 mb-5">
    <h2 class="special"><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h2>
    <a href="/stylists/@stylist.GetId()/edit"><button class="btn btn-sm btn-warning text-white">Edit Stylist</button></a><br>
    <a href="/stylists/@stylist.GetId()/delete"><button class="btn btn-sm btn-danger mt-1">Delete Stylist</button></a>
    </div>  
    }
  </div>
  
  <a href='/stylists/new'><button class="btn btn-lg btn-primary mb-3">Add a Stylist</button></a><br>
  <a href="/"><button class="btn btn-lg btn-dark">Back to Main</button></a><br>
     <a href='/stylists/delete'><button class="btn btn-lg btn-danger mt-3">Delete All Stylists</button></a><br>
  </div>